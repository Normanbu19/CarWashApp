<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#EEF1F7">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- ðŸ”¹ Tarjeta principal -->
        <LinearLayout
            android:id="@+id/cardContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:elevation="6dp"
            android:padding="28dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_max="420dp">

            <Space
                android:layout_width="1dp"
                android:layout_height="50dp" />

            <TextView
                android:text="Agregar VehÃ­culo"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/edtMarca"
                android:hint="Marca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_input_modern"
                android:padding="14dp"
                android:drawableLeft="@drawable/ic_directions_car"
                android:drawablePadding="10dp"
                android:textColorHint="#9CA3AF"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/edtModelo"
                android:hint="Modelo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_input_modern"
                android:padding="14dp"
                android:drawableLeft="@drawable/ic_build"
                android:drawablePadding="10dp"
                android:textColorHint="#9CA3AF"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/edtAnio"
                android:hint="AÃ±o"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_input_modern"
                android:padding="14dp"
                android:drawableLeft="@drawable/ic_calendar"
                android:drawablePadding="10dp"
                android:textColorHint="#9CA3AF"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/edtTipoAceite"
                android:hint="Tipo de aceite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_input_modern"
                android:padding="14dp"
                android:drawableLeft="@drawable/ic_oil_drop"
                android:drawablePadding="10dp"
                android:textColorHint="#9CA3AF"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/edtPlaca"
                android:hint="Placa (opcional)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_input_modern"
                android:padding="14dp"
                android:drawableLeft="@drawable/ic_edit"
                android:drawablePadding="10dp"
                android:textColorHint="#9CA3AF"
                android:layout_marginBottom="22dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btnCancelar"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Cancelar"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/bg_button_secondary" />

                <Space
                    android:layout_width="12dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/btnGuardar"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Guardar"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/bg_button_primary" />
            </LinearLayout>
        </LinearLayout>

        <!-- ðŸš— Ãcono superior centrado y alineado -->
        <FrameLayout
            android:id="@+id/heroCircle"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/bg_icon_circle"
            android:elevation="10dp"
            app:layout_constraintBottom_toTopOf="@id/cardContainer"
            app:layout_constraintStart_toStartOf="@id/cardContainer"
            app:layout_constraintEnd_toEndOf="@id/cardContainer"
            android:translationY="46dp"
            android:gravity="center">

            <ImageView
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_gravity="center"
                android:elevation="12dp"
                android:src="@drawable/logo_carwash"
                android:tint="@color/cardview_shadow_start_color" />
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
