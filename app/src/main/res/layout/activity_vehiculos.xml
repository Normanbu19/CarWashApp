<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:fillViewport="true"
android:background="#EEF1F7">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <!-- ðŸ”¹ Tarjeta principal -->
    <LinearLayout
        android:id="@+id/cardContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_card"
        android:elevation="8dp"
        android:padding="28dp"
        android:clipToPadding="false"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="60dp">

        <!-- ðŸš˜ TÃ­tulo -->
        <TextView
            android:text="Mis VehÃ­culos"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#111827"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- ðŸ“‹ Lista de vehÃ­culos -->
        <ListView
            android:id="@+id/listVehiculos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@android:color/transparent"
            android:dividerHeight="10dp"
            android:background="@android:color/transparent"
            android:padding="4dp" />

    </LinearLayout>

    <!-- ðŸš— Ãcono decorativo superior -->
    <FrameLayout
        android:id="@+id/heroCircle"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/bg_icon_circle"
        android:elevation="12dp"
        app:layout_constraintBottom_toTopOf="@id/cardContainer"
        app:layout_constraintStart_toStartOf="@id/cardContainer"
        app:layout_constraintEnd_toEndOf="@id/cardContainer"
        android:translationY="40dp"
        android:gravity="center">

        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:elevation="14dp"
            android:src="@drawable/logo_carwash"
            android:tint="@color/cardview_shadow_end_color" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
