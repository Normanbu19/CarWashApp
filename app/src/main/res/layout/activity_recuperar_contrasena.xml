<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#EEF1F7">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!--  Tarjeta principal -->
        <LinearLayout
            android:id="@+id/cardContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:elevation="6dp"
            android:padding="28dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constrainedWidth="true"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="60dp">

            <Space
                android:layout_width="1dp"
                android:layout_height="70dp" />

            <!-- Ь T铆tulo -->
            <TextView
                android:text="Recuperar Contrase帽a"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp" />

            <TextView
                android:text="Ingresa tu correo electr贸nico y te enviaremos un c贸digo de verificaci贸n para restablecer tu contrase帽a."
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp" />

            <!--  Campo de correo -->
            <EditText
                android:id="@+id/edtCorreo"
                android:hint="Correo electr贸nico"
                android:inputType="textEmailAddress"
                android:background="@drawable/bg_input_modern"
                android:padding="14dp"
                android:drawableLeft="@drawable/ic_mail"
                android:drawablePadding="10dp"
                android:textColorHint="#9CA3AF"
                android:layout_marginBottom="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!--  Bot贸n de enviar c贸digo -->
            <Button
                android:id="@+id/btnEnviar"
                android:text="Enviar c贸digo de verificaci贸n"
                android:textColor="#FFFFFF"
                android:background="@drawable/bg_button_primary"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:elevation="2dp" />
        </LinearLayout>

        <!--  cono de candado superior -->
        <FrameLayout
            android:id="@+id/heroCircle"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/bg_icon_circle"
            android:elevation="10dp"
            app:layout_constraintBottom_toTopOf="@id/cardContainer"
            app:layout_constraintStart_toStartOf="@id/cardContainer"
            app:layout_constraintEnd_toEndOf="@id/cardContainer"
            android:translationY="50dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/imgLock"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:src="@drawable/ic_lock"
                app:tint="#2563EB"
                android:elevation="12dp"
                android:layout_gravity="center" />
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
