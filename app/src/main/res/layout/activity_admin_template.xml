<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#EEF1F7">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- TARJETA PRINCIPAL -->
        <LinearLayout
            android:id="@+id/cardContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:elevation="6dp"
            android:padding="26dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="60dp">

            <Space
                android:layout_width="1dp"
                android:layout_height="45dp" />

            <!-- TITULO DINÁMICO -->
            <TextView
                android:id="@+id/txtTitulo"
                android:text="Título Dinámico"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <!-- LISTA DINÁMICA -->
            <ListView
                android:id="@+id/listGeneral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@android:color/transparent"
                android:dividerHeight="10dp"
                android:background="#F9FAFB"
                android:elevation="2dp"
                android:padding="10dp"
                android:layout_marginBottom="20dp" />

            <!-- BOTONES DE ACCIÓN (opcionales) -->
            <LinearLayout
                android:id="@+id/buttonContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:visibility="gone">
            </LinearLayout>

        </LinearLayout>

        <!-- ICONO CIRCULAR -->
        <FrameLayout
            android:id="@+id/iconCircle"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/bg_icon_circle"
            android:elevation="10dp"
            app:layout_constraintBottom_toTopOf="@id/cardContainer"
            app:layout_constraintStart_toStartOf="@id/cardContainer"
            app:layout_constraintEnd_toEndOf="@id/cardContainer"
            android:translationY="50dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/iconMain"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:src="@drawable/ic_user"
                android:tint="#2563EB"
                android:elevation="12dp"
                android:layout_gravity="center" />
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
