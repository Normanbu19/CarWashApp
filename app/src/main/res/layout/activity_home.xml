<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:fitsSystemWindows="true"
    tools:context=".HomeActivity">

    <!-- Contenido principal -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_nav"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="90dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!--  T铆tulo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Men煤 Principal"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="24dp" />

            <!--  Logo principal -->
            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:src="@drawable/logo_carwash"
                android:contentDescription="Logo CarWash"
                android:layout_marginBottom="40dp"
                android:scaleType="fitCenter" />

            <!--  Botones del men煤 principal -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnSolicitarCotizacion"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Solicitar Cotizaci贸n"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/btn_primary"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/btnHistorialServicios"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Historial de Servicios"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/btn_secondary"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/btnCalificacionServicio"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Calificaci贸n del Servicio"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/btn_primary"
                    android:layout_marginBottom="16dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Barra inferior de navegaci贸n -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@drawable/bg_gradient"
        android:elevation="8dp"
        android:gravity="center"
        android:padding="10dp"
        android:weightSum="2">

        <!-- Bot贸n Home -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnHome"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@null"
                android:contentDescription="Inicio"
                android:src="@drawable/ic_home"
                android:tint="#FFFFFF" />
        </LinearLayout>

        <!-- Bot贸n Perfil -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnPerfil"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@null"
                android:src="@drawable/ic_user"
                android:tint="#FFFFFF"
                android:contentDescription="Perfil" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
