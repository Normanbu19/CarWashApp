<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:fitsSystemWindows="true"
    tools:context=".HomeActivity">

    <!-- Contenido principal -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_nav"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="90dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- Título -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menú Principal"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="24dp" />

            <!-- Botones superiores -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btnReservarAhora"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Reservar ahora"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/btn_primary"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnMisReservas"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Mis reservas"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/btn_secondary" />
            </LinearLayout>

            <!-- Imagen central del carro -->
            <ImageView
                android:id="@+id/imgCar"
                android:layout_width="240dp"
                android:layout_height="200dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/car_icon"
                android:scaleType="fitCenter"
                android:contentDescription="Carro" />

            <!-- Botones de servicio -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="32dp">

                <Button
                    android:id="@+id/btnFull"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Servicio Full - L. 250"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/btn_service_selector"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btnExpress"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Servicio Express - L. 150"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/btn_service_selector"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btnAmorol"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Pasta cerámica extra - L. 85"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/btn_service_selector"
                    android:layout_marginBottom="20dp"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

            <!-- Botón de fecha -->
            <Button
                android:id="@+id/btnFechaHora"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Seleccionar día y hora"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:background="@drawable/btn_red"
                android:layout_marginTop="10dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Barra inferior con íconos -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@drawable/bg_gradient"
        android:elevation="8dp"
        android:gravity="center"
        android:padding="10dp"
        android:weightSum="2">

        <!-- Botón Home -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnHome"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@null"
                android:src="@drawable/ic_home"
                android:tint="#FFFFFF"
                android:scaleType="fitCenter"
                android:contentDescription="Inicio" />
        </LinearLayout>

        <!-- Botón Perfil -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnPerfil"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@null"
                android:src="@drawable/ic_user"
                android:tint="#FFFFFF"
                android:scaleType="fitCenter"
                android:contentDescription="Perfil" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>