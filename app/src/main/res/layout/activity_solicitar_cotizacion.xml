<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#EEF1F7">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <LinearLayout
            android:id="@+id/cardContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:elevation="6dp"
            android:padding="28dp"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginVertical="40dp">

            <!-- TÍTULO -->
            <TextView
                android:text="Solicitar Cotización"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:gravity="center"
                android:layout_marginBottom="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- SELECCIÓN DE VEHÍCULO -->
            <TextView
                android:text="Selecciona tu vehículo:"
                android:textSize="16sp"
                android:textColor="#374151"
                android:layout_marginBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/spinnerVehiculo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_input_modern"
                android:padding="12dp"
                android:layout_marginBottom="18dp" />

            <!-- TIPO DE SERVICIO -->
            <TextView
                android:text="Tipo de servicio:"
                android:textSize="16sp"
                android:textColor="#374151"
                android:layout_marginBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/spinnerServicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_input_modern"
                android:padding="12dp"
                android:layout_marginBottom="6dp" />

            <!-- ADVERTENCIA SERVICIOS RESTRINGIDOS -->
            <TextView
                android:id="@+id/txtAdvertencia"
                android:text="⚠ Algunos servicios como cambio de aceite y lavado de motor solo están disponibles en el centro."
                android:textColor="#DC2626"
                android:textSize="13sp"
                android:layout_marginBottom="18dp"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- FECHA -->
            <TextView
                android:text="Fecha:"
                android:textSize="16sp"
                android:textColor="#374151"
                android:layout_marginBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/txtFecha"
                android:hint="dd/mm/aaaa"
                android:background="@drawable/bg_input_modern"
                android:padding="12dp"
                android:textColorHint="#9CA3AF"
                android:layout_marginBottom="18dp"
                android:focusable="false"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- HORA -->
            <TextView
                android:text="Hora:"
                android:textSize="16sp"
                android:textColor="#374151"
                android:layout_marginBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/txtHora"
                android:hint="hh:mm"
                android:background="@drawable/bg_input_modern"
                android:padding="12dp"
                android:textColorHint="#9CA3AF"
                android:layout_marginBottom="18dp"
                android:focusable="false"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- UBICACIÓN -->
            <TextView
                android:text="Ubicación del servicio:"
                android:textSize="16sp"
                android:textColor="#374151"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RadioGroup
                android:id="@+id/grupoUbicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginBottom="26dp">

                <RadioButton
                    android:id="@+id/rbCentro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Centro de servicio"
                    android:textColor="#374151" />

                <RadioButton
                    android:id="@+id/rbDomicilio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A domicilio"
                    android:textColor="#374151"
                    android:layout_marginStart="20dp" />
            </RadioGroup>

            <!-- BOTÓN ENVIAR -->
            <Button
                android:id="@+id/btnEnviarCotizacion"
                android:text="Enviar Solicitud"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="@drawable/bg_button_primary"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:elevation="3dp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
