<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEF1F7"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <LinearLayout
            android:id="@+id/cardContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:elevation="6dp"
            android:padding="28dp"
            android:gravity="center_horizontal"
            android:layout_marginVertical="60dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:text="Cambiar Contraseña"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/edtCorreoCambio"
                android:hint="Correo electrónico"
                android:background="@drawable/bg_input_modern"
                android:drawableLeft="@drawable/ic_mail"
                android:drawablePadding="10dp"
                android:padding="14dp"
                android:layout_marginBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/edtCodigoCambio"
                android:hint="Código de verificación"
                android:background="@drawable/bg_input_modern"
                android:drawableLeft="@drawable/ic_lock"
                android:drawablePadding="10dp"
                android:padding="14dp"
                android:layout_marginBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/edtNuevaContrasena"
                android:hint="Nueva contraseña"
                android:inputType="textPassword"
                android:background="@drawable/bg_input_modern"
                android:drawableLeft="@drawable/ic_edit"
                android:drawablePadding="10dp"
                android:padding="14dp"
                android:layout_marginBottom="22dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnCambiarContrasena"
                android:text="Cambiar Contraseña"
                android:textColor="#FFFFFF"
                android:background="@drawable/bg_button_primary"
                android:layout_width="match_parent"
                android:layout_height="48dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
