<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#EEF1F7">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <LinearLayout
            android:id="@+id/cardContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:elevation="6dp"
            android:padding="28dp"
            android:clipToPadding="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="60dp">

            <Space
                android:layout_width="1dp"
                android:layout_height="60dp" />

            <!-- ðŸ“· BotÃ³n cÃ¡mara -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="-10dp"
                android:layout_marginBottom="28dp">

                <ImageButton
                    android:id="@+id/btnCambiarFoto"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:background="@drawable/bg_camera_button"
                    android:src="@drawable/ic_camera"
                    android:scaleType="centerInside"
                    android:padding="8dp"
                    android:contentDescription="Cambiar foto de perfil"
                    android:elevation="8dp" />
            </LinearLayout>

            <TextView
                android:text="Perfil del Usuario"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp" />

            <!-- ðŸ”¹ NUEVO CAMPO UNIFICADO -->
            <EditText
                android:id="@+id/edtNombreCompleto"
                android:hint="Nombre completo"
                android:background="@drawable/bg_input_modern"
                android:padding="14dp"
                android:drawableLeft="@drawable/ic_user"
                android:drawablePadding="10dp"
                android:textColorHint="#9CA3AF"
                android:layout_marginBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- ðŸŒ PaÃ­s -->
            <EditText
                android:id="@+id/edtPais"
                android:hint="PaÃ­s"
                android:background="@drawable/bg_input_modern"
                android:padding="14dp"
                android:drawableLeft="@drawable/ic_location"
                android:drawablePadding="10dp"
                android:textColorHint="#9CA3AF"
                android:layout_marginBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- âœ‰ Correo -->
            <EditText
                android:id="@+id/edtCorreo"
                android:hint="Correo"
                android:inputType="textEmailAddress"
                android:background="@drawable/bg_input_modern"
                android:padding="14dp"
                android:drawableLeft="@drawable/ic_mail"
                android:drawablePadding="10dp"
                android:textColorHint="#9CA3AF"
                android:layout_marginBottom="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- ðŸ”˜ Guardar -->
            <Button
                android:id="@+id/btnGuardarPerfil"
                android:text="Guardar Cambios"
                android:textColor="#FFFFFF"
                android:background="@drawable/bg_button_primary"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="14dp" />

            <!-- ðŸš— Ir a agregar vehÃ­culo -->
            <Button
                android:id="@+id/btnAgregarVehiculo"
                android:text="Agregar VehÃ­culo"
                android:textColor="#FFFFFF"
                android:background="@drawable/btn_secondary"
                android:layout_width="match_parent"
                android:layout_height="48dp" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/heroCircle"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:background="@drawable/bg_icon_circle"
            android:elevation="10dp"
            app:layout_constraintBottom_toTopOf="@id/cardContainer"
            app:layout_constraintStart_toStartOf="@id/cardContainer"
            app:layout_constraintEnd_toEndOf="@id/cardContainer"
            android:translationY="50dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/imgPerfil"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:visibility="gone"
                android:clipToOutline="true"
                android:layout_gravity="center" />

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>